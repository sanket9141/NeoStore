<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".myaccount.MyAccount"
    android:background="#e91b1a">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myAccountToolBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorprimaryred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/myAccountToolbarBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_chevron_left_24"/>


        <TextView
            android:id="@+id/myAccountToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:layout_gravity="center"
            android:text="My Account"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            />
        <ImageView
            android:id="@+id/myAccountImgSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@drawable/search_icon"/>

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="133.33dp"
        android:layout_height="133.33dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/profileavtar"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myAccountToolBar"
        />

    <TextView
        android:id="@+id/txtAccFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="33.33dp"
        android:layout_marginRight="33.33dp"
        android:text="Sanket"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_baseline_person"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:padding="10dp" />
    <TextView
        android:id="@+id/txtAccLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.33dp"
        android:layout_marginLeft="33.33dp"
        android:layout_marginRight="33.33dp"
        android:text="Shejul"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_baseline_person"
        app:layout_constraintTop_toBottomOf="@+id/txtAccFirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:padding="10dp" />

    <TextView
        android:id="@+id/txtAccEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.33dp"
        android:layout_marginLeft="33.33dp"
        android:layout_marginRight="33.33dp"
        android:text=""
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        app:layout_constraintTop_toBottomOf="@+id/txtAccLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:padding="10dp" />

    <TextView
        android:id="@+id/txtAccPhonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.33dp"
        android:layout_marginLeft="33.33dp"
        android:layout_marginRight="33.33dp"
        android:text=""
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
        app:layout_constraintTop_toBottomOf="@+id/txtAccEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:padding="10dp" />

    <TextView
        android:id="@+id/txtAccDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.33dp"
        android:layout_marginLeft="33.33dp"
        android:layout_marginRight="33.33dp"
        android:text=""
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_baseline_cake_24"
        app:layout_constraintTop_toBottomOf="@+id/txtAccPhonenumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="33.33dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33.33dp"
        android:backgroundTint="@color/white"
        android:text="EDIT PROFILE"
        android:textColor="#E91C1A"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccDOB" />


    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnResetPassword"
        android:layout_height="53.33dp"
        android:backgroundTint="@color/white"
        android:text="RESET PASSWORD"
        android:textSize="17dp"
        android:textColor="@color/resetpasswordcolor"
        android:fontFamily="@font/gotham_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-6dp" />



</androidx.constraintlayout.widget.ConstraintLayout>